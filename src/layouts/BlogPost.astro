---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <BaseHead title={title} description={description} />
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: visible;
        margin-bottom: 2em;
      }
      article {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: visible;
        margin-bottom: 2em;
      }
    
      @font-face {
        font-family: "Neue";
        src: url("/fonts/PPNeueMontreal-SemiBoldItalic.otf") format("opentype");
        font-weight: 600;
        font-style: italic;
        font-display: swap;
      }
      div {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
        border: none;
        overflow-y: visible;
        margin-bottom: 2em;
      }
      .content {
        width: 100%;
        max-width: 800px;
        padding: 0 1em;
        margin: 0 auto;
        overflow-y: visible;
        padding-top: 2em;
        display: flex;
        flex-direction: column;
        margin-bottom: 2em;
      }
      .hero-image {
        max-width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
      }
      .prose {
        width: 100%;
        max-width: calc(100% - 2em);
        color: rgb(var(--gray-dark));
        overflow-y: visible;
        margin-bottom: 2em;
        color: #0156cf;
      }
      .title {
        text-align: center;
        line-height: 1;
        font-size: 3em;
        font-family: "Neue", sans-serif;
        max-width: 900px; 
        margin: 0 -1em; 
      }
      .title h1 {
        margin: 0 0 0.5em 0;
        text-align: center;
      }
      .date {
        margin-bottom: 0.5em;
        text-align: center;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .titledate {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      .dark {
        color: #f8f8f8;
      }
    
      .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
      }
    
      @media (max-width: 768px) {
        .title {
          font-size: 1.25em;
          text-align: center;
          max-width: 100%; /* Restrict width on smaller screens */
          margin: 0;
        }
      }
    </style>
    
  </head>

  <body>
    <Header />
    <div class="content">
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="titledate">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1 class="title">{title}</h1>
            <hr />
          </div>
        <div class="prose">
          
          <slot />
        </div>
      </article>
      <Footer />
    </div>
  </body>
</html>
