---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={SITE_TITLE + " | Portfolio"}
      description={SITE_DESCRIPTION}
    />
    <style>
      .port-cont h1 {
        font-size: 2em;
        text-align: center;
        margin-bottom: 0;
      }

      .port-cont p {
        text-align: center;
      }

      .port-cont {
        margin-bottom: 0;
        padding: 0;
      }

      /* Added the highlight container and animation */

      @media only screen and (max-width: 940px) {
        .port-cont h1 {
          font-size: 1em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="port-cont neue">
      <h1>Tell me more about your project</h1>
      <p>I'll get back to you as soon as I can.</p>
      <script
        type="text/javascript"
        src="https://opnform.com/widgets/iframeResize.min.js"></script>
      <iframe
        style="border:none;width:100%;"
        id="form-tell-me-more-about-your-project-yyllxl"
        src="https://opnform.com/forms/tell-me-more-about-your-project-yyllxl"
      ></iframe>
      <script type="text/javascript">
        iFrameResize(
          { log: false, checkOrigin: false },
          "#form-tell-me-more-about-your-project-yyllxl"
        );
      </script>

      <Footer />
    </main>
  </body>
</html>
