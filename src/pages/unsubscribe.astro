---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={SITE_TITLE + " | Portfolio"}
      description={SITE_DESCRIPTION}
    />
    <style>
      .port-cont h1 {
        font-size: 2em;
        text-align: center;
        margin-bottom: 0;
      }

      .port-cont p {
        text-align: center;
      }

      .port-cont {
        margin-bottom: 0;
        padding: 0;
      }

      /* Added the highlight container and animation */

      @media only screen and (max-width: 940px) {
        .port-cont h1 {
          font-size: 1em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="port-cont neue">
      <h1>Enter your email to stop recieving blog notifs.</h1>
	<div id="loading-animation" style="text-align: center;">
		<p>Loading...</p>
	</div>
	<iframe
		style="border:none;width:100%;display:none;"
		id="untitled-form-wbp7g5-1"
		src="https://opnform.com/forms/untitled-form-wbp7g5-1"></iframe>
	<script
		type="text/javascript"
		onload="initEmbed('untitled-form-wbp7g5-1')"
		src="https://opnform.com/widgets/iframe.min.js"></script>
	<script>
		document.getElementById('untitled-form-wbp7g5-1')!.onload = function() {
			document.getElementById('loading-animation')!.style.display = 'none';
			document.getElementById('untitled-form-wbp7g5-1')!.style.display = 'block';
		};
	</script>

      <Footer />
    </main>
  </body>
</html>
